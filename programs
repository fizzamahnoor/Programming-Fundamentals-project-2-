#include <iostream>
using namespace std;
int main() {
    int i=4;
    for(int a=1;a<=i;a++)
    {
        for (int j=1;j<=a;j++){
            cout<<"*";
        }
        cout<<endl;
    }
}

output:
*
**
***
****



